<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zara.user.UserMapper">

    <insert id="insertUser" parameterType="com.zara.user.User" useGeneratedKeys="true" keyProperty="userId">
        INSERT INTO USER (
        ID,
        PASSWORD,
        USEREMAIL,
        USERNAME
        )
        VALUES (
        #{id},
        #{password},
        #{userEmail},
        #{userName}
        )
    </insert>

    <update id="updateUser" parameterType="com.zara.user.User">
        UPDATE USER
        SET ID = #{id},
            PASSWORD = #{password},
            USEREMAIL = #{userEmail},
            USERNAME = #{userName}
        WHERE USERID = #{userId}
    </update>

    <delete id="deleteUser" parameterType="int">
        DELETE FROM USER
        WHERE USERID = #{userId}
    </delete>

    <select id="readUser" resultType="com.zara.user.User">
        SELECT ID,
               PASSWORD,
               USEREMAIL,
               USERNAME
        FROM USER
        WHERE 1=1
        <if test="userId != null">
            AND userId like '%'||#{userId}||'%'
        </if>
    </select>

    <select id="readDetailUser" resultType="com.zara.user.User" parameterType="String">
        SELECT ID,
               PASSWORD,
               USEREMAIL,
               USERNAME
        FROM USER
        WHERE ID = #{id}
    </select>

    <select id="checkId" resultType="String" parameterType="String">
        SELECT ID
        FROM   USER
        WHERE  ID = #{id}
    </select>

